{
   "compilerOptions": {
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "allowJs": true,
       "strict": true,
       "esModuleInterop": true,
       "strictNullChecks": true,
       "module": "commonjs",
       "target": "es6",
       "noImplicitReturns": true,
       "noImplicitAny": true,
       "alwaysStrict": true,
       "moduleResolution": "node",
       "noUnusedLocals": true,
       "removeComments": true,
       "strictFunctionTypes": true,
       "strictPropertyInitialization": false,
       "noImplicitThis": true,
       "resolveJsonModule": true,
       "strictBindCallApply": true,
       "skipLibCheck": true,
       "sourceMap": true,
       "lib": ["scripthost", "es2015", "es2016", "es2017"],
       "outDir": "dist",
       "rootDir": ".",
       "rootDirs": ["."],
       "baseUrl": ".",
       "typeRoots": ["types", "node_modules/@types"],
       "paths": {}
   },
   "exclude": [
       ".vscode",
       "generated",
       "node_modules",
       "**/.git",
       "types",
       "dist",
       "tmp",
       "logs"
   ]
}
